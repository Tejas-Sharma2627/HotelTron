<div class="row">
  <h1 class="text-center">New Hotel</h1>
  <div class="col-6 offset-3">
    <form action="/allHotels/<%=result._id %>?_method=PUT" class="needs-validation" method="POST" novalidate>
      <div class="mb-3">
        <label class="form-label" for="name">Enter the Name of Hotel</label>
        <input class="form-control" type="text" id="name" name="hotel[name]" value="<%=result.name %> " required/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Hotel Price</label>
        <div class="input-group">
          <span class="input-group-text">Rs.</span>
          <input
          id="price-label"
            type="text"
            class="form-control"
            placeholder="0.0"
            name="hotel[price]"
            value="<%= result.price %> "
            aria-label="Amount (to the nearest dollar)"
            required
          />
          
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Enter the location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          value="<%=result.location %> "
          name="hotel[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          value="<%=result.image %> "
          name="hotel[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="descr">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="descr"
          name="hotel[descr]"
          required
        ><%=result.descr %> </textarea>
      </div>
      <div class="md-3"><button class="btn btn-success">Update Hotel</button></div>
    </form>
    <a href="/allHotels">Back to Index</a>
  </div>
</div>
